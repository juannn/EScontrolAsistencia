<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MenuAdministrador" >

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:paddingTop="50dp" >

        <LinearLayout
            android:layout_width="760dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="0dp" >

            <ImageView
                android:id="@+id/imgMiembros"
                android:layout_width="153dp"
                android:layout_height="150dp"
                android:src="@drawable/nuev_miemb" />

            <ImageView
                android:id="@+id/imgElimina"
                android:layout_width="153dp"
                android:layout_height="150dp"
                android:src="@drawable/eliminar_todo" />

            <ImageView
                android:id="@+id/imgAsistencia"
                android:layout_width="153dp"
                android:layout_height="150dp"
                android:onClick="Asistencia"
                android:src="@drawable/control_asist" />

            <ImageView
                android:id="@+id/imgReporte"
                android:layout_width="153dp"
                android:layout_height="150dp"
                android:src="@drawable/report_tod" />

            <ImageView
                android:id="@+id/imgUsuario"
                android:layout_width="153dp"
                android:layout_height="150dp"
                android:src="@drawable/clientscharter" />
            
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/horizontalScrollView1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:text="OPCIONES"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="57sp" />

</RelativeLayout>